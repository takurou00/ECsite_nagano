<div class='container'>
  <div class="row d-flex justify-content-center">
        <h3 class="h3 font-weight-bold border-bottom">注文履歴詳細</h3>
    </div>
    <div class='row'>
      <div class='col-md-8 text-center'>
        <h6 class="h6 font-weight-bold">注文情報</h6>
        <table class='table'>
          <tr>
            <th class='bg-light font-weight-bold'>注文日</th>
            <td class="font-weight-normal"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class='bg-light font-weight-bold'>配送先</th>
            <td class="font-weight-normal">〒<%= @order.postal_code %></br><%= @order.address %></br><%= @order.name %></td>
          </tr>
          <tr>
            <th class='bg-light font-weight-bold'>支払い方法</th>
            <td class="font-weight-normal"><%= @order.payment_method %></td>
          </tr>

        </table>
      </div>

      <div class='col-md-4 text-center'>
        <h6 class="h6 font-weight-bold">請求情報</h6>
        <table class='table text-center'>
          <tr>
            <th class='bg-light font-weight-bold'>商品合計</th>
            <td class="font-weight-normal"><%= @order.total_payment-@order.shipping_cost %></td>
          </tr>
          <tr>
            <th class='bg-light font-weight-bold'>配送料</th>
            <td class="font-weight-normal"><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class='bg-light font-weight-bold'>ご請求金額</th>
            <td class="font-weight-normal"><%= @order.total_payment%></td>
          </tr>
        </table>
      </div>
      </div>

    <div class="row d-flex justify-content-center">
        <p class="h6 font-weight-bold">注文内容</h6>
        <table class='table text-center'>
            <tr class="bg-light font-weight-normal">
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr class="font-weight-normal">
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price*order_detail.amount %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>