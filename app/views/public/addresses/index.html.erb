<div class='container'>
  <div class='row'>
      <h3 class='h3 border-bottom'>配送先登録</h3>
      </div>
      <div class='row'>
        <%= form_with model:@address, url: addresses_path(@address), local:true do |f| %>
          <table class='table font-weight-normal'>
            <tr class>
              <td>
                <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
              </td>
              <td>
                <%= f.text_field :postal_code %>
              </td>
            </tr>

            <tr>
              <td>
              	<%= f.label :address, "住所" %>
              </td>
              <td>
                <%= f.text_field :address %>
              </td>
            </tr>

            <tr>
              <td>
              	<%= f.label :name, "宛名" %>
              </td>
              <td>
                <%= f.text_field :name %>
              </td>
              </tr>

              <tr>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
              <td></td>
            </tr>
          </table>
        <% end %>
        </div>

        <div>
        <h3 class='h3 font-weight-normal border-bottom'>配送先一覧</h3>
        </div>
        <div class="row">
        <table class='table table-bordered' style="padding:10px">
    		  <thead>
            <tr class='bg-light'>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to '編集する', edit_address_path(address), class: "ml-5 btn btn-success" %>
                  <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "ml-5 btn btn-danger"%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

</div>