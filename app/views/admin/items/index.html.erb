<div class="container">
  <div class="row mx-auto justify-content-between">
      <div class="justify-content-center">
        <h4 class="h4 border-bottom">商品新規登録</h4>
      </div>

      <div>
         <%= link_to new_admin_item_path do %>
           <button type="button" class="btn btn-success btn-md">＋</button>
         <% end %>
      </div>
  </div>

  <div class="row mt-3">
    <table class="table">
      <thead class="thead">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
      <tbody class="tbody">
        <tr>
          <!--ID-->
          <td><%= item.id %></td>
          <!--商品名-->
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <!--価格-->
          <td><%= item.price %></td>
          <!--ジャンル---->
          <!--byebug-->
          <td><%= item.genre.name %></td>
          <!--ステータス-->
          <td><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
   <%= paginate @items %>
</div>