<div class="container">
  <div class="row d-flex justify-content-center">
  <h3 class="h3 text-center mt-1">商品新規登録</h3>
  </div>
<%= form_with model: [ :admin, @item ], local: true do |f| %>
  <div class='row'>
    <div class='mx-auto my-3'>
      <table class='table　table-borderless' style='height: 400px'>
        <tr>
          <th>商品画像</th>
          <td>
            <%= attachment_image_tag @item, :image, class: "img-square", size:"300x300" %>
            <%= f.attachment_field :image, placeholder: "商品画像" %>
          </td>
        </tr>
         <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>
         <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, :size=>"40" %></td>
        </tr>
         <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, @genres, :id, :name %></td>
        </tr>
         <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price %></td>
        </tr>
         <tr>
          <th>販売ステータス</th>
          <td><%= f.select :is_active, [["販売中","true"],["売り切れ","false"]], :prompt=>"選択してください" %></td>
        </tr>
      </table>
    </div>
  </div>
    <div class='row'>
      <%= f.submit "新規登録", class: "btn btn-success mx-auto"%>
    </div>
  </div>
<% end %>
</div>