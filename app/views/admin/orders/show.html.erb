  <div class="ml-10 my-3">
  <h2 class="h2 font-weight-normal">注文履歴詳細</h2>
  </div>
  <table class='table font-weight-normal'>
  <tr>
    <th>購入者</th>
    <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.postal_code %> <%= @order.address %></br><%= @order.name %></td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>

  </tr>
</table>


<table class='table'>
  <thead class='thead'>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.item.price*1.1).floor %></td>
        <td><%= order_detail.amount %></td>
        <td><%= (order_detail.item.price*order_detail.amount*1.1).floor %></td>
      </tr>
    <% end %>
  </tbody>
</table>