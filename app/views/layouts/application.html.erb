<!DOCTYPE html>
<html>
  <head>
    <title>nagano_cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <header>
   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
     <span class="my-0 ml-5 mr-md-auto">
        <% if admin_signed_in? %>
            <%= link_to admin_root_path do %>
            <%= image_tag 'img/logo2.png', size: "50x50" %>
            <% end %>
        <% else %>
            <%= link_to root_path do %>
            <%= image_tag 'img/logo2.png', size: "50x50" %>
            <% end %>
        <% end %>
     </span>
    <nav class="my-2 my-md-0 mr-md-3">
       <ul class="nav">
        <% if customer_signed_in? %>
         <li class="nav-item"> <%= link_to "マイページ", my_page_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "商品一覧", items_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "カート", cart_items_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'p-2 text-dark' %></li>
       <% elsif admin_signed_in? %>
         <li class="nav-item"> <%= link_to "商品一覧", admin_items_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "会員一覧", admin_customers_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "注文履歴一覧", admin_root_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "ジャンル一覧", admin_genres_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"> <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'p-2 text-dark' %></li>
            <% else %>
         <li class="nav-item"><%= link_to "about", about_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"><%= link_to "商品一覧", items_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"><%= link_to "新規登録", new_customer_registration_path, class: 'p-2 text-dark' %></li>
         <li class="nav-item"><%= link_to "ログイン", new_customer_session_path, class: 'p-2 text-dark' %></li>
            <% end %>
        </nav>
        </div>
        </header>
         <%= yield %>
          <% unless current_page?(root_path) %>
          <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>NAGANO-CAKE</p>
    	</div>
    </div>
  </div>
</footer>
<% end %>
  </body>
</html>