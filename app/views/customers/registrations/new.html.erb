<div class="container">
  <div class="row d-flex justify-content-center">
    <h4 class="h4 text-center text-muted">新規会員登録</h4>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

  <div class="row mt-4 mb-3">
  <div class="col-lg-2"></div>
  <table class="col-lg-10 font-weight-normal">
    <tr>
      <td>
        名前
      </td>
      <td>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
       <span class="ml-3">
       <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "太郎" %>
        </span>
      </td>
      <td>
      </td>
    </tr>
    <tr>
      <td>
        フリガナ
      </td>
      <td>
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
       <span class="ml-3">
         <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "タロウ" %>
        </span>
      </td>
      <td>
      </td>
    </tr>

    <tr>
      <td>
      <%= f.label :email, "メールアドレス" %>
      </td>
      <td>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </td>
      <td>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
      </td>
      <td>
        <%= f.text_field :address, :size=>"40", autofocus: true, autocomplete: "address", placeholder: "東京都新宿区西新宿2-8-1 " %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      </td>
      <td>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </td>
      <td>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
      </td>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
      </td>
    </tr>
  </table>
  </div></div>
  <div class="row d-flex justify-content-center">
    <%= f.submit "新規登録", class: "mt-4 btn btn-success" %>
  </div>

    <div class="row d-flex justify-content-center">
      <h5 class="h6 text-muted font-weight-normal border-bottom mt-3 mb-2">既に登録済みの方</h4>
    </div>

  <div class="row d-flex justify-content-center">
    <div class="border-bottom text-dark">
      <%= render "customers/shared/links" %>
    </div>
  </div>
  <% end %>
</div>